{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <!-- Material form login -->
  <div class="card">

    <h5 class="card-header info-color white-text text-center py-4">
      <strong>Editar {{brand.name}}</strong>
    </h5>

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">

      <!-- Form -->
    <form class="text-center" action="/brands/edit/{{brand._id}}?_method=PUT"  enctype="multipart/form-data" method="POST">
          <input type="hidden" name="_method" value="PUT">

        <!-- name -->
        <div class="md-form">
          <input type="text" id="materialLoginFormName" name="name" class="form-control"  value="{{brand.name}}">
          <label for="materialLoginFormName">Raz&oacute;n Social</label>
        </div>

        <!-- document -->
        <div class="md-form">
          <input type="text" id="materialLoginFormDocument" name="document" class="form-control"   value="{{brand.document}}">
          <label for="materialLoginFormDocument">Documento</label>
        </div>

        <!-- url -->
        <div class="md-form">
          <input type="text" id="materialLoginFormUrl" name="url" class="form-control"   value="{{brand.url}}">
          <label for="materialLoginFormUrl">Web</label>
        </div>

        <!-- address -->
        <div class="md-form">
          <textarea id="address" name="address" class="md-textarea form-control">{{brand.address}}</textarea>
          <label for="address">Direcci&oacute;n</label>
        </div>

      

        <!-- Description-->
        <div class="md-form">
          <textarea id="description" name="description" class="md-textarea form-control">  {{brand.description}}</textarea>
          <label for="description">Descripci&oacute;n</label>
        </div>

        <!-- logo -->
        <div class="file-field">
          <div class="mb-4">
            <img  id="preview-image" 
              src="{{brand.logo}}" 
              class="rounded-circle z-depth-1-half avatar-pic" 
              alt="{{brand.name}}"/>
          </div>
          <div class="d-flex justify-content-center">
              <button  class="btn btn-mdb-color btn-rounded float-left" id="upload-dialog" type="button">Logo</button>
              <input type="file" name="image" id="image-file"  style="display:none" />
              <input type="text" value="{{brand.logo}}" name="logo" hidden/>
          </div>
        </div>

        <hr>
        <!-- Sign in button -->
        <button class="btn btn-outline-info waves-effect" type="submit">Actualizar</button>
      </form>
      <!-- Form -->
    </div>
  </div>
  <!-- Material form login -->
</div>
