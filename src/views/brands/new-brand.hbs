<div class="col-md-4 mx-auto">
<!-- Material form login -->
<div class="card">

  <h5 class="card-header info-color white-text text-center py-4">
    <strong>Crear Empresa</strong>
  </h5>

  <!--Card content-->
  <div class="card-body px-lg-5 pt-0">

    <!-- Form -->
    <form class="text-center" enctype="multipart/form-data" style="color: #757575;" action="/brands/new-brand" method="POST">

      <!-- name -->
      <div class="md-form">
        <input type="text" id="materialLoginFormName" name="name" class="form-control" autofocus>
        <label for="materialLoginFormName">Raz&oacute;n Social</label>
      </div>

      <!-- document -->
      <div class="md-form">
        <input type="text" id="materialLoginFormDocument" name="document" class="form-control">
        <label for="materialLoginFormDocument">Documento</label>
      </div>

      <!-- url -->
      <div class="md-form">
        <input type="text" id="materialLoginFormUrl" name="url" class="form-control">
        <label for="materialLoginFormUrl">Web</label>
      </div>

      <!-- address -->
      <div class="md-form">
        <textarea id="address" name="address" class="md-textarea form-control"></textarea>
        <label for="address">Direcci&oacute;n</label>
      </div>

     

      <!-- Description-->
      <div class="md-form">
        <textarea id="description" name="description" class="md-textarea form-control"></textarea>
        <label for="description">Descripci&oacute;n</label>
      </div>


      <div class="file-field">
        <div class="mb-4">
          <img  id="preview-image" 
            src="/uploads/placeholder-avatar.jpg"
            class="rounded-circle z-depth-1-half avatar-pic" 
            alt="logo">
        </div>
        <div class="d-flex justify-content-center">
            <button  class="btn btn-mdb-color btn-rounded float-left" id="upload-dialog" type="button">Logo</button>
            <input type="file" name="image" id="image-file"  style="display:none" />
        </div>
      </div>
    <hr>
      <!-- Sign in button -->
      <button class="btn btn-outline-info waves-effect" type="submit">Crear</button>

    </form>
    <!-- Form -->

  </div>

</div>
<!-- Material form login -->

</div>

